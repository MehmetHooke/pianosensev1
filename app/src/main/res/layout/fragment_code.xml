<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">



    <!-- Başlık ve açıklama -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="Almost there"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Please enter the 6-digit code sent to your email for verification."
        android:textSize="15sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center" />

    <!-- Kod giriş alanları -->
    <LinearLayout
        android:id="@+id/codeLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitleText"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <EditText
            android:id="@+id/otpDigit1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_login"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/otpDigit2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_login"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/otpDigit3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_login"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/otpDigit4"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_login"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:layout_marginHorizontal="10dp"/>
        <EditText
            android:id="@+id/otpDigit5"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_login"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:layout_marginHorizontal="10dp"/>
        <EditText
            android:id="@+id/otpDigit6"
            android:layout_width="1dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="@drawable/rounded_login"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:layout_marginHorizontal="10dp"/>
        <!-- Aynı yapıyı 6 basamak için tekrarlayın -->
        <!-- Örneğin yukarıdaki EditText kodunu 5 kez daha kopyalayabilirsiniz -->

    </LinearLayout>

    <!-- Doğrulama butonu -->
    <Button
        android:id="@+id/verifyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/codeLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/btncolor"
        android:text="VERIFY"
        android:textColor="@android:color/white" />

    <!-- Yardımcı açıklamalar -->

    <TextView
        android:id="@+id/helpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verifyButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="19dp"
        android:text="Didn’t receive any code? "
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/resendText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="332dp"
        android:layout_toEndOf="@+id/helpText"
        android:text="Resend Again"
        android:textColor="@color/btncolor"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/helpText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="1dp"
        android:text="Request new code in 00:30s"
        android:textColor="@android:color/darker_gray" />

</RelativeLayout>
